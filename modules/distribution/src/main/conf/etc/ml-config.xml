<?xml version="1.0" encoding="UTF-8"?>
<mlSettings>
    <database>jdbc/WSO2ML_DB</database>
    <dataUploadSettings>
        <uploadLocation>USER_HOME</uploadLocation>
        <inMemoryThreshold>1024</inMemoryThreshold>
        <uploadLimit>20971520</uploadLimit>
    </dataUploadSettings>
    <summaryStatisticsSettings>
        <histogramBins>20</histogramBins>
        <categoricalThreshold>20</categoricalThreshold>
        <sampleSize>10000</sampleSize>
    </summaryStatisticsSettings>
    <properties>
    	<property name="ml.thread.pool.size" value="100" />
    	<property name="target.home" value="/tmp" />
	<property name="data.file.in" value="org.wso2.carbon.ml.core.impl.FileInputAdapter" />
        <property name="data.file.out" value="org.wso2.carbon.ml.core.impl.FileOutputAdapter" />
    </properties>
</mlSettings>
