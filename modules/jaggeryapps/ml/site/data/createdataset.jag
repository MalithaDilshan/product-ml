<script type="text/javascript">

function buildNotifications(message){
        var builtErrors = 
        '<div class="ctrl-validation-panel col-md-12 col-centered">' +
        '<p>' + message + '</p>'
        '</div>';
console.log(builtErrors);
        return builtErrors;
    }     

$( document ).ready(function() {

	$('#nav').affix({
	      offset: {
	        top: $('header').height()
	      }
	});

    $("[data-toggle=popover]").popover();

    $(".ctrl-asset-type-switcher").popover({
        html : true, 
        content: function() {
            return $('#content-asset-types').html();
        }
    });	

    // hide HDFS/BAM data source input for default case
    //$('#source-hdfs-bam').hide();

    
	$('#submit-dataset').on('click', function(e){
		e.preventDefault();
		var crtValArea = $(this).closest(".wr-form");
            	var notificationArea = crtValArea.prev(".ctrl-validation-panel");

		var name = $('#dataset-name').val();
		var dataSourceType = $('#src-type option:selected').val();
		var dataTargetType =  $('#dest-type option:selected').val();
		var sourcePath =  $('#src-path').val();
		var dataType =  $('#data-format option:selected').val();
		var containsHeader =  $('#column-header option:selected').val();
		var comments =  $('#dataset-desc').val();
		var version = $('#dataset-version').val();

       	var baseUrl = getBaseUrl(window.location.href);
       	var jsonData = '{"name":"'+name+
                        '","dataSourceType":"'+dataSourceType+
                        '","dataTargetType":"'+dataTargetType+
                        '","sourcePath":"'+sourcePath+
                        '","dataType":"'+dataType+
			'","comments":"'+comments+
                        '","containsHeader":"'+containsHeader+'","version":"'+version+'"}';
       	$.ajax({
       	    type: 'POST',
       	    url: baseUrl + '/api/datasets', 
       	    contentType: "application/json",
       	    data: jsonData,
       	    beforeSend : function(xhr) {
                xhr.setRequestHeader("Authorization", "Basic " + "YWRtaW46YWRtaW4=");
            },
            success : function(res){
        	    window.location = baseUrl + '/ml/site/data/datasets.jag';   
            },
            error :  function(res){
			notificationArea.remove();
                        crtValArea.before(buildNotifications(res.responseText));
            }   
        });
	})

	$('#cancel-dataset').on('click', function(e){
		window.location.href = './datasets.jag';
	});

	// change data source input according to data source type input
	/*$('#src-type').on('change', function(e){
		var dataSourceType = $('#src-type option:selected').text();
		if (dataSourceType == 'HDFS' || dataSourceType == 'BAM') {
			$('#source-file').hide();
			$('#source-hdfs-bam').show();
		}
		else {
			$('#source-hdfs-bam').hide();
			$('#source-file').show();	
		}
	});*/

}); 

</script>

