<div class="row">
	<div class="col-md-12">
		

		<!-- content -->
		<div class="container col-md-12 col-centered wr-content">

			<div class="wr-form col-lg-5 col-centered">

				<h1 class="title">Create Dataset</h1>


				<label class="input-label">Dataset Name<span class="help-tip glyphicon glyphicon-question-sign"></span></label>
				<div class="input-control text">
				    <input type="text" value="" placeholder="e.g. Iris" id="dataset-name"/>
				    <!--span class="form-val-error">* Name for this Dataset is required.</span-->
				</div>

				<label class="input-label">Version<span class="help-tip glyphicon glyphicon-question-sign"></span></label>
				<div class="input-control text">
				    <input type="text" value="1.0.0" placeholder="" id="dataset-version"/>
				</div>				

				<label class="input-label">Description<span class="help-tip glyphicon glyphicon-question-sign"></span></label>
				<div class="input-control text">
				    <textarea rows="3" id="dataset-desc"></textarea>
				</div>

				<label class="input-label">Source Type<span class="help-tip glyphicon glyphicon-question-sign"></span></label>
				<div class="input-control text">
					<select class="form-control" id="src-type">
					  <option value="file">File</option>
					  <option value="hdfs">HDFS</option>
					  <option value="bam">BAM</option>
					</select>				
				</div>	

				<label class="input-label">Data Source<span class="File Location"></span></label>
                <!-- <div id="source-file" class="input-control file info-state" data-role="input-control">
	                <input type="file">
	            </div> -->
				<div id="source-hdfs-bam" class="input-control text">
				    <input type="text" value="" placeholder="e.g. file:///home/datasets/iris.csv" id="src-path"/>
				</div>

				<label class="input-label">Data Format<span class="help-tip glyphicon glyphicon-question-sign"></span></label>
				<div class="input-control text">
					<select class="form-control" id="data-format">
                      <option value="csv">CSV</option>
					  <option value="tsv">TSV</option>					  
					</select>				
				</div>

				<label class="input-label">Column header available<span class="help-tip glyphicon glyphicon-question-sign"></span></label>
				<div class="input-control text">
					<select class="form-control" id="column-header">
                      <option value="true">Yes</option>
					  <option value="false">No</option>					  
					</select>				
				</div>				

				<label class="input-label">Destination<span class="help-tip glyphicon glyphicon-question-sign"></span></label>
				<div class="input-control text">
					<select class="form-control" id="dest-type">
                      <option value="file">File</option>
					  <option value="hdfs">HDFS</option>					  
					</select>				
				</div>

				<div class="btn-group-actions">
	            	<button class="btn btn-main" type="submit" id="submit-dataset">Create Dataset</button>
	            </div>	            

			</div>

